            <span>VOICE CHANNELS</span>
            <button 
              className={styles.addChannelButton}
              onClick={() => setShowCreateModal(true)}
              title="Create Channel"
            >
              +
            </button>
          </div>

          <div className={styles.channelsList}>
            {rooms.map(room => (
              <VoiceChannel
                key={room.id}
                room={room}
                onJoin={handleJoinRoom}
